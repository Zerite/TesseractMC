{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist/",
    "baseUrl": ".",
    "paths": {
      "@tesseract/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}